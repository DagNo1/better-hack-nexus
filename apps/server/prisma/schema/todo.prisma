model Todo {
  id        Int     @id @default(autoincrement())
  text      String
  completed Boolean @default(false)
  ownerId   String
  projectId String?

  owner   User     @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  project Project? @relation(fields: [projectId], references: [id])

  @@map("todo")
}
